<%- include('partials/header.ejs') %>

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Categories</h1>
            <a href="/admin/categories/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Add Category</a>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">All Categories</h6>
            </div>
              
        <% if (data.mess.length > 0) { %>
            <div class="alert alert-success mt-2">           
                <%=data.mess%>                
            </div>
            
        <% } %>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sr</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Created At</th> 
                                <th>Action</th>
                                
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Sr</th>
                                <th>Name</th>
                                <th>Image</th>  
                                <th>Created At</th> 
                                <th>Action</th>                             
                            </tr>
                        </tfoot>
                        <tbody>                            
                            <% data.categories.forEach((res,index)=>{%>
                                <tr>
                                    <td>
                                        <%=index+1%>
                                    </td>
                                    <td>
                                        <%=res.name%>
                                    </td>
                                    <td>
                                        <img src="/<%=res.img%>" width="100" />
                                    </td>
                                    <td>
                                        <%=res.createat.getDate()%>/<%=res.createat.getMonth()%>/<%=res.createat.getFullYear()%>
                                    </td>
                                    <td>
                                        <!-- <a class="btn btn-sm btn-primary"  href="#">View</a> -->
                                        <a class="btn btn-sm btn-info" href="<%= `/admin/categories/${res._id}` %>">Edit</a>
                                        <a class="btn btn-sm btn-danger" href="<%= `/admin/categories/delete?id=${res._id}` %>">Delete</a>
                                    </td>
                                </tr>
                                <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


